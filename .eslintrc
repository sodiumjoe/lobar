{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],

  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-trailing-spaces": 2,
    "no-debugger": 1,
    "no-console": 0,
    "indent": [ 2, 2 ],
    "linebreak-style": [ 2, "unix" ],
    "quotes": [ 2, "single" ],
    "semi": [ 2, "always" ]
  }
}
